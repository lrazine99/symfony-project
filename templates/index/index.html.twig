{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="w3-content" style="max-width:2000px;margin-top:46px">

  <!-- The Band Section -->
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
    <h1 class="w3-wide">Hello {% if name is defined %}
        {{ name }}
        {% else %}
        Inconnu
        {% endif %}
        ! âœ…</h1>
  
    <div class="w3-row w3-padding-32">
        {% if listeProduit is defined %}
            {% for produit in listeProduit %}
            <div class="w3-third">
              <p>{{ produit.name }}</p>
              {% if produit.category == 'Lait' %}
                <img src="{{ asset('assets/img/placeholder_blue.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
              {% elseif produit.category == 'Fromage' %}
                <img src="{{ asset('assets/img/placeholder_green.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
              {% elseif produit.category == 'Yaourt' %}
                <img src="{{ asset('assets/img/placeholder_red.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
              {% else %}
                <img src="{{ asset('assets/img/placeholder_black.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
              {% endif %}
              {% if is_granted('ROLE_ADMIN') %}
              <button class="w3-button w3-black w3-margin-bottom"><a href="{{ path('produit_edit', {'idProduit': produit.id } )}}">Modifier</a></button>
              <button class="w3-button w3-black w3-margin-bottom"><a href="{{ path('produit_delete', {'idProduit': produit.id } )}}">Supprimer</a></button>
              {% endif %}
            </div>
             
            {% endfor %}
        {% else %}
            <div class="w3-third">
              <p>Name</p>
              <img src="{{ asset('assets/img/placeholder_blue.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
            </div>
            <div class="w3-third">
              <p>Name</p>
              <img src="{{ asset('assets/img/placeholder_green.jpg') }}" class="w3-round w3-margin-bottom" alt="Random Name" style="width:60%">
            </div>
            <div class="w3-third">
              <p>Name</p>
              <img src="{{ asset('assets/img/placeholder_red.jpg') }}" class="w3-round" alt="Random Name" style="width:60%">
            </div>
      {% endif %}
    </div>
    
  </div>


  <!-- Ticket Modal -->
  <div id="ticketModal" class="w3-modal">
    <div class="w3-modal-content w3-animate-top w3-card-4">
      <header class="w3-container w3-teal w3-center w3-padding-32"> 
        <span onclick="document.getElementById('ticketModal').style.display='none'" 
       class="w3-button w3-teal w3-xlarge w3-display-topright">&times;</span>
        <h2 class="w3-wide"><i class="fa fa-suitcase w3-margin-right"></i>Tickets</h2>
      </header>
      <div class="w3-container">
        <p><label><i class="fa fa-shopping-cart"></i> Tickets, $15 per person</label></p>
        <input class="w3-input w3-border" type="text" placeholder="How many?">
        <p><label><i class="fa fa-user"></i> Send To</label></p>
        <input class="w3-input w3-border" type="text" placeholder="Enter email">
        <button class="w3-button w3-block w3-teal w3-padding-16 w3-section w3-right">PAY <i class="fa fa-check"></i></button>
        <button class="w3-button w3-red w3-section" onclick="document.getElementById('ticketModal').style.display='none'">Close <i class="fa fa-remove"></i></button>
        <p class="w3-right">Need <a href="#" class="w3-text-blue">help?</a></p>
      </div>
    </div>
  </div>

  <!-- The Contact Section -->
  <div class="w3-container w3-content w3-padding-64" style="max-width:800px" id="contact">
    <h2 class="w3-wide w3-center">CONTACT</h2>
    <p class="w3-opacity w3-center"><i>Fan? Drop a note!</i></p>
    <div class="w3-row w3-padding-32">
      <div class="w3-col m6 w3-large w3-margin-bottom">
        <i class="fa fa-map-marker" style="width:30px"></i> Chicago, US<br>
        <i class="fa fa-phone" style="width:30px"></i> Phone: +00 151515<br>
        <i class="fa fa-envelope" style="width:30px"> </i> Email: mail@mail.com<br>
      </div>
      <div class="w3-col m6">
        <form action="/action_page.php" target="_blank">
          <div class="w3-row-padding" style="margin:0 -16px 8px -16px">
            <div class="w3-half">
              <input class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
            </div>
            <div class="w3-half">
              <input class="w3-input w3-border" type="text" placeholder="Email" required name="Email">
            </div>
          </div>
          <input class="w3-input w3-border" type="text" placeholder="Message" required name="Message">
          <button class="w3-button w3-black w3-section w3-right" type="submit">SEND</button>
        </form>
      </div>
    </div>
  </div>
  
<!-- End Page Content -->
</div>
{% endblock %}
